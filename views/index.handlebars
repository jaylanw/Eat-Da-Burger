<h1>Eat Da Burger!</h1>
<main>
    <div class="container-fluid">
        <div class="row">
            <div class="col-6">
                <h2>Eat This Burger:</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless this.devoured}}
                    <li>
                        {{this.burger_name}}
                        <form action="/{{this.id}}" method="POST">
                            <input type="hidden" name="devour">
                            <button class="btn btn-dark" type="submit">Devour!</button>
                        </form>
                    </li>
                    {{/unless}} {{/each}}
                </ul>
            </div>
        </div>
        <div class="col-4">
            <h2>You've Devoured These Burgers: </h2>
            <ul>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    {{this.burger_name}}
                </li>
                {{/if}} {{/each}}
            </ul>
        </div>
    </div>
</main>
<h2>Add a Burger To The Menu!</h2>
<div class="row">
    <form class="addBurger" method="POST">
        <input type="text" id="name" name="burger_name" placeholder="Enter your burger here!">
        <button type="submit" class="addBurgerBtn">Add Burger</button>
    </form>
</div>
</div>